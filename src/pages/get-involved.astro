---
import { Image } from "astro:assets";
import aboutImg from "@/assets/about-mitj4c.jpeg";
import PageLayout from "@/layouts/Base.astro";

const meta = {
	description: "Get Involved with MIT Jews for Collective Liberation",
	title: "Get Involved",
};
---

<PageLayout meta={meta}>
	<h1 class="title mb-6">Get Involved</h1>
	<div class="prose prose-sm prose-cactus max-w-none">
		<p>
			To learn more and get involved, fill out your info on the <a
				class="cactus-link inline-block"
				href="https://docs.google.com/forms/d/e/1FAIpQLSewY_nGPgeWLQuGHPQI_3nxgR_O1fVQhRusCGbfuDFEgfdrrg/viewform?usp=sf_link"
				target="_blank"
				rel="noopener noreferrer"
				aria-label="interest form">interest form</a
			>, and an organizer will get in touch with you.
		</p>
		<div class="flex justify-center">
			<Image
				src={aboutImg}
				alt="JCL's first gathering in 2023."
				loading="eager"
				fetchpriority="high"
			/>
		</div>
	</div>
</PageLayout>
