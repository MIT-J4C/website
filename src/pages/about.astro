---
import { Image } from "astro:assets";

import PageLayout from "@/layouts/Base";
import aboutImg from "@/assets/about-mitj4c.jpeg";

const meta = {
	title: "About",
	description: "About MIT Jews for Ceasefire",
};
---

<PageLayout meta={meta}>
	<div class="space-y-6">
		<h1 class="title">About</h1>
		<p>
			Welcome to MIT Jews for Ceasefire! We demand a ceasefire NOW and call for an end to Israeli
			occupation.
		</p>
		<div class="flex justify-center">
			<Image
				src={aboutImg}
				alt="A cartoon cactus looking at the 'Astro.build' logo"
				loading="eager"
				fetchpriority="high"
			/>
		</div>
		<p>
			To learn more and get involved, fill out your info on the <a
				class="cactus-link inline-block"
				href="https://github.com/chrismwilliams/astro-cactus"
				target="_blank"
				rel="noopener noreferrer"
				aria-label="interest form">interest form</a
			>, and an organizer will get in touch with you.
		</p>
	</div>
</PageLayout>
